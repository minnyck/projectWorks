<div class="container">

    <!-- header -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3>Bill Control Panel</h3>
                </div>

                <div class="btn-group btn-group-justified">
                    <a href="/bills" class="btn btn-warning">Cancel Edit</a>
                    <a href="/bills/delete/{{myBill._id}}" class="btn btn-danger">Delete Bill</a>
                    <!-- <a href="#" class="btn btn-primary">Sony</a> -->
                </div>

                <div class="panel-body">
                    <form name="createBill" method="POST" action="/bills/view/{{myBill._id}}">
                        <div class="row">
                            <div class="form-group">
                                <input class="form-control" id="date" name="date" type="date"
                                    value="2021-01-{{myBill.date}}" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <input class="form-control" id="amount" name="amount" type="number" min="0"
                                    max="99999.99" step=".01" value="{{myBill.amount}}" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <input class="form-control" id="vendor" name="vendor" type="text"
                                    value="{{myBill.vendor}}" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <textarea id="description" name="description"
                                    cols="100%">{{myBill.description}}</textarea>
                            </div>
                        </div>

                        <input type="submit" class="btn btn-success pull-right" value="Edit" />
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>